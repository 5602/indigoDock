/*
Theme 
	dark
	light

ColorGroups
	all (for all states)
	normal (only for active state)
	active (only for active state)
	inactive (only for inactive state)
	disabled (only for disabled state)

ColorRoles
	alternate-base 		= QPalette::AlternateBase;
	background 		= QPalette::Background;
	base 			= QPalette::Base;
	bright-text 		= QPalette::BrightText;
	button 			= QPalette::Button;
	button-text 		= QPalette::ButtonText;
	dark 			= QPalette::Dark;
	foreground 		= QPalette::Foreground;
	highlight 		= QPalette::Highlight;
	highlighted-text 	= QPalette::HighlightedText;
	light			= QPalette::Light;
	link 			= QPalette::Link;
	link-visited 		= QPalette::LinkVisited;
	mid 			= QPalette::Mid;
	midlight 		= QPalette::Midlight;
	shadow 			= QPalette::Shadow;
	text 			= QPalette::Text;
	tooltip-base 		= QPalette::ToolTipBase;
	tooltip-text 		= QPalette::ToolTipText;
	window 			= QPalette::Window;
	window-text 		= QPalette::WindowText;

ColorFormat
	rgb(255,255,255);
	rgba(255,255,255,100);
	hsv(360,100,100);
	hsva(360,100,100,100);

Styles: http://doc.qt.io/qt-4.8/stylesheet-examples.html

*/
Palette::dark {
	[all]		alternate-base:		rgb(53,53,53);
	[all]		base:			rgb(25,25,25);
	[all]		bright-text:		rgb(255,0,0);
	[all]		button:			rgb(53,53,53);
	[all]		button-text:		#ffffff;
	[disabled]	button-text:		#808080;
	[all]		highlight:		rgb(42,130,218);
	[all]		highlighted-text:	rgb(0,0,0);
	[all]		link:			rgb(42,130,218);
	[all]		text:			#ffffff;
	[disabled]	text:			#808080;
	[all]		tooltip-base:		#ffffff;
	[all]		tooltip-text:		#ffffff;
	[all]		window:			rgb(53,53,53);
	[all]		window-text: 		#ffffff;
}

/* Regular QSS definitions */


IndigoDropZone { 

	background-color: palette(base);
	
}

IndigoTabBar::tab:hover {
        background-color: palette(base);
}

QScrollBar:horizontal {
    border: 1px solid palette(dark);
    background: palette(window);
    height: 10px;
    margin: 0px 10px 0px 10px;
}
QScrollBar::handle:horizontal {
    background: palette(base);
    min-width: 10px;
}
QScrollBar::add-line:horizontal {
    border: 1px solid palette(dark);
    background: palette(window);
    width: 10px;
    subcontrol-position: right;
    subcontrol-origin: margin;
	border-top-right-radius: 5px;
	border-bottom-right-radius: 5px;
}

QScrollBar::sub-line:horizontal {
    	border: 1px solid palette(dark);
    	background: palette(window);
    	width: 10px;
    	subcontrol-position: left;
   	subcontrol-origin: margin;
  	border-top-left-radius: 5px;
	border-bottom-left-radius: 5px;
}

QScrollBar:vertical {
    border: 1px solid palette(dark);
    background: palette(window);
    width: 10px;
    margin: 10px 0px 10px 0px;
}
QScrollBar::handle:vertical {
    background: palette(base);
    min-height: 10px;
}
QScrollBar::add-line:vertical {
    border: 1px solid palette(dark);
    background: palette(window);
    height: 10px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
	border-bottom-left-radius: 5px;
	border-bottom-right-radius: 5px;
}

QScrollBar::sub-line:vertical {
    	border: 1px solid palette(dark);
    	background: palette(window);
    	height: 10px;
    	subcontrol-position: top;
   	subcontrol-origin: margin;
  	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
}


